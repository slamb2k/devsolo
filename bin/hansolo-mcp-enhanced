#!/usr/bin/env node

/**
 * Enhanced MCP Server launcher for han-solo
 * Supports both tools (natural language) and prompts (structured commands)
 */

const path = require('path');
const { spawn } = require('child_process');

// Determine the path to the built MCP server
const serverPath = path.join(__dirname, '..', 'dist', 'mcp', 'hansolo-mcp-server-enhanced.js');

// Check if the server file exists
const fs = require('fs');
if (!fs.existsSync(serverPath)) {
  console.error('Enhanced MCP server not found. Please run "npm run build:mcp" first.');
  process.exit(1);
}

// Launch the server
const server = spawn('node', [serverPath], {
  stdio: 'inherit',
  env: { ...process.env }
});

// Handle server exit
server.on('exit', (code) => {
  if (code !== 0) {
    console.error(`Enhanced MCP server exited with code ${code}`);
  }
  process.exit(code || 0);
});

// Handle interrupts
process.on('SIGINT', () => {
  server.kill('SIGINT');
});

process.on('SIGTERM', () => {
  server.kill('SIGTERM');
});