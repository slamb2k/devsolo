{
  "name": "hansolo-mcp",
  "version": "2.0.0",
  "description": "AI-native git workflow automation via Model Context Protocol (MCP) for Claude Code",
  "main": "dist/index.js",
  "bin": {
    "hansolo-mcp": "./bin/hansolo-mcp"
  },
  "scripts": {
    "build": "tsc",
    "build:mcp": "tsc -p tsconfig.mcp.json",
    "build:plugin": "node scripts/build-plugin.js",
    "package:plugin": "node scripts/package-plugin.js",
    "test:plugin": "node scripts/test-plugin.js",
    "clean": "rimraf dist coverage dist-plugin",
    "dev": "tsc --watch",
    "dev:mcp": "tsc --watch -p tsconfig.mcp.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:mcp": "jest --testPathPattern=mcp",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:full": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "mcp:start": "node dist/mcp/hansolo-mcp-server.js",
    "mcp:test": "npm run build:mcp && npm run test:mcp",
    "postinstall": "node scripts/postinstall.js",
    "prepack": "npm run clean && npm run build && npm run build:mcp",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "package": "npm run build && npm pack",
    "docker:build": "docker build -t hansolo:latest .",
    "docker:run": "docker run -it --rm -v $(pwd):/workspace hansolo:latest"
  },
  "keywords": [
    "git",
    "workflow",
    "automation",
    "mcp",
    "model-context-protocol",
    "linear-history",
    "ai-native",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hansolo/cli.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "dist-plugin",
    "bin",
    "templates",
    "scripts",
    ".hansolo/commands",
    ".claude-plugin",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@gitbeaker/node": "^35.8.0",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@octokit/rest": "^20.0.0",
    "simple-git": "^3.20.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "husky": "^9.0.0",
    "lefthook": "^1.5.0"
  },
  "peerDependenciesMeta": {
    "husky": {
      "optional": true
    },
    "lefthook": {
      "optional": true
    }
  }
}
